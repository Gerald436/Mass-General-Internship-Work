import serial
import time

# Open serial connection (adjust 'COM3' or '/dev/ttyUSB0' based on your system)
arduino = serial.Serial(port='COM3', baudrate=9600, timeout=1)
time.sleep(2)  # Wait for Arduino to initialize

def send_command(command):
    """Send a single character command to Arduino."""
    arduino.write(command.encode())  # Convert string to bytes and send
    time.sleep(0.1)  # Allow time for Arduino to process
    response = arduino.readline().decode().strip()  # Read response
    print(f"Arduino Response: {response}")
    end = "1"
    arduino.write(end.encond())

# Example: Change states
send_command('2')  # Set state to RUNNING
time.sleep(2)
send_command('3')  # Set state to STOPPED

arduino.close()  # Close connection
